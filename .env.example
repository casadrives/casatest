# App
VITE_APP_NAME=CasaDrives
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Modern Ride-Sharing Platform"

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# MapBox Configuration
VITE_MAPBOX_TOKEN=your_mapbox_token_here
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/streets-v12

# Feature Flags
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Performance
VITE_WEBSOCKET_RECONNECT_ATTEMPTS=5
VITE_WEBSOCKET_RECONNECT_INTERVAL=2000
VITE_MAP_UPDATE_INTERVAL=3000
VITE_LOCATION_UPDATE_INTERVAL=5000

# UI Configuration
VITE_TOAST_DURATION=5000
VITE_ANIMATION_DURATION=300
VITE_MAP_ZOOM_LEVEL=13
VITE_MAP_PITCH=45
VITE_MAP_BEARING=0

# Cache Configuration
VITE_CACHE_VERSION=1
VITE_CACHE_MAX_AGE=3600
VITE_CACHE_STALE_WHILE_REVALIDATE=300

# PWA Configuration
VITE_PWA_NAME="CasaDrives"
VITE_PWA_SHORT_NAME="CasaDrives"
VITE_PWA_THEME_COLOR="#000000"
VITE_PWA_BACKGROUND_COLOR="#ffffff"
VITE_PWA_DISPLAY=standalone
VITE_PWA_ORIENTATION=portrait

# Error Reporting
VITE_ERROR_REPORTING_ENABLED=false
VITE_ERROR_REPORTING_SAMPLE_RATE=0.1

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
